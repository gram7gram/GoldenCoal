{% extends '::base.html.twig' %}

{% block title %}Білий iPad* від Білого Вугілля{% endblock %}

{% set params = app.request.attributes.get('_route_params') %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('themes/white-coal/index.css') }}?v={{ spa_version }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="promo">
                    <img src="{{ asset('img/white-coal/promo-banner.jpg') }}" alt="Prize" class="img-responsive"/>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    {% if event.isExpired() %}
                        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
                            <div class="form-group text-center" style="background: #fbd101;padding: 10px 0;">
                                <h1 class="bold uppercase">АКЦІЯ ЗАВЕРШЕНА</h1>
                                <h2 class="bold">Очікуйте на новини
                                    <br>12 грудня</h2>
                            </div>
                        </div>
                    {% endif %}
                    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
                        {% if event.isExpired() %}
                            <div class="form-group">
                                <a href="{{ path('participant_index', {'code': params.code}) }}"
                                   class="btn btn-lg btn-block btn-primary uppercase">Перелік учасників</a>
                            </div>
                            <div class="form-group">
                                <a href="{{ path('winner_index', {'code': params.code}) }}"
                                   class="btn btn-lg btn-block btn-primary uppercase disabled">Переможці акції</a>
                            </div>
                        {% else %}
                            <div class="form-group">
                                <a href="{{ path('register_index', {'code': params.code}) }}"
                                   class="btn btn-lg btn-block btn-primary uppercase">
                                    Пройти реєстрацію&nbsp;<i class="fa fa-circle"></i>
                                </a>
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <a href="{{ path('about_index', {'code': params.code}) }}"
                               class="btn btn-lg btn-block btn-primary uppercase">Правила акції</a>
                        </div>
                        <div class="form-group">
                            <a href="{{ path('contact_index', {'code': params.code}) }}"
                               class="btn btn-lg btn-block btn-default uppercase">Задати питання</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
